<form col="6">
    <label name="name"/>
    <field name="name"/>
    <label name="category"/>
    <field name="category"/>
    <label name="product"/>
    <field name="product"/>
    <label name="description"/>
    <field name="description" colspan="5"/>
    <label name="price"/>
    <field name="price"/>
    <label name="cost"/>
    <field name="cost"/>
    <label name="percentage"/>
    <field name="percentage"/>
    <notebook colspan="6">
        <page name="preparation">
            <field name="preparation" colspan="4"/>
        </page>
        <page name="components">
            <field name="components" colspan="4"/>
        </page>
        <page name="subrecipes">
            <field name="subrecipes" colspan="4"/>
        </page>
        <page name="attachments">
            <field name="attachments" colspan="4"/>
        </page>
    </notebook>
</form>
