this repository contains the full copyright notices and license terms. -->
<form col="6">
    <label name="name"/>
    <field name="name"/>
    <label name="category"/>
    <field name="category"/>
    <label name="product"/>
    <field name="product"/>
    <label name="description"/>
    <field name="description" colspan="5"/>
    <notebook colspan="6">
        <page name="preparation">
            <field name="preparation" colspan="4"/>
        </page>
        <page name="components">
            <field name="components" colspan="4"/>
            <field name="subrecipes" colspan="4"/>
        </page>
        <page name="attachments">
            <field name="attachments"
                view_ids="dish_recipe.attachment_view_tree" colspan="4"/>
        </page>
	<page id="costs" string="Price / Costs">
            <label name="price"/>
	    <field name="price"/>
	    <newline/>
	    <separator id="average_cost" string="Average Cost" colspan="4"/>
	    <label name="cost"/>
	    <field name="cost"/>
	    <label name="percentage"/>
	    <field name="percentage"/>
	    <separator id="last_cost" string="Last Cost" colspan="4"/>
	    <label name="cost_last"/>
	    <field name="cost_last"/>
	    <label name="percentage_last"/>
	    <field name="percentage_last"/>
        </page>
        <page id="other" string="Other">
            <label name="sequence"/>
	    <field name="sequence"/>
            <label name="publish"/>
	    <field name="publish"/>
	    <newline/>
	    <label name="info_1"/>
	    <field name="info_1"/>
	    <label name="info_2"/>
            <field name="info_2"/>
	    <label name="info_3"/>
            <field name="info_3"/>
        </page>
    </notebook>
</form>
